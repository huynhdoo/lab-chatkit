# ============================================================================
# ChatKit FastHTML - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values

# REQUIRED: OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk_your_api_key_here

# REQUIRED: ChatKit Configuration
# Get your workflow ID from: https://platform.openai.com/agent-builder
# Must start with 'wf_'
CHATKIT_WORKFLOW_ID=wf_your_workflow_id_here

# ============================================================================
# OPTIONAL: Advanced Configuration
# ============================================================================

# Custom ChatKit API base URL (default: https://api.openai.com)
# CHATKIT_API_BASE=https://api.openai.com

# ============================================================================
# Server Configuration
# ============================================================================

# Host to listen on (default: 0.0.0.0)
HOST=0.0.0.0

# Port to listen on (default: 8000)
PORT=8000

# Debug mode (True for development, False for production)
DEBUG=True

# ============================================================================
# Database Configuration (optional)
# ============================================================================

# DATABASE_URL=sqlite+aiosqlite:///./chat.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/chatkit

# ============================================================================
# Redis Configuration (optional - for caching/sessions)
# ============================================================================

# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Email Configuration (optional - for notifications)
# ============================================================================

# SMTP_FROM_EMAIL=noreply@example.com
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587

# ============================================================================
# JWT Configuration (optional - for authentication)
# ============================================================================

# JWT_SECRET_KEY=your-super-secret-key-change-this

# ============================================================================
# Analytics Configuration (optional)
# ============================================================================

# SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# Notes:
# - Never commit this file with real credentials
# - Use separate .env files for different environments
# - In production, use environment variables directly (not .env file)
# - See README.md for more information
# ============================================================================
